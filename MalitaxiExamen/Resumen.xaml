<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MalitaxiExamen.Resumen">
    <ContentPage.Content>
        <StackLayout>

            <Frame BackgroundColor="Red" Padding="18" CornerRadius="0">
                <Label Text="INGRESO ESTUDIANTES" HorizontalTextAlignment="Center" TextColor="White" FontSize="20"/>

            </Frame>

            <Label Text=""/>
            <Label x:Name = "lblUsuario" />
            <Label x:Name = "lblClave" />
            <Entry x:Name="txtUsuario" IsReadOnly="False" FontSize="12"/>
            <Entry x:Name="txtClave" IsReadOnly="False" FontSize="12"/>


            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>



                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>

                    <ColumnDefinition/>
                    <ColumnDefinition/>

                </Grid.ColumnDefinitions>

                <Label Text="Total a pagar: " Grid.Row="0" Grid.Column="0" FontSize="12"/>
                <Entry x:Name="txtFinal" IsReadOnly="True" Grid.Row="0" Grid.Column="1" FontSize="10"/>

            </Grid>
            <Button x:Name="btnVer" Text="Ver" Clicked="btnVer_Clicked"/>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>